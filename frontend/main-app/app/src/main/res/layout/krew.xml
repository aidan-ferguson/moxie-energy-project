<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Your Krew"
        android:textColor="@color/blue_whale"

        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="415dp"
        android:layout_height="434dp"

        android:background="@drawable/layout_bg3"
        android:gravity="bottom"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appliance_recycler_view"
        android:layout_width="408dp"
        android:layout_height="452dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dd2"
        android:layout_width="34dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_baseline_chevron_right_24"
        android:rotation="180"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="#1153AF4C"
        android:ems="10"
        android:hint="Enter your friends ID to send an invite"
        android:inputType="textPersonName"
        android:textColor="@color/blue_whale"
        app:layout_constraintBottom_toBottomOf="@+id/appliance_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"></EditText>



</androidx.constraintlayout.widget.ConstraintLayout>